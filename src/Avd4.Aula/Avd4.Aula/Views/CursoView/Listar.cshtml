@using Avd4.Aula.Domain.Entidades
@model List<Curso>
@{
    ViewData["Title"] = "Lista de cursos";
}

<div class="row mt-3 mb-3">
    <div class="col-12">
        <fieldset>
            <legend>Lista de cursos</legend>
        </fieldset>
        <hr />
    </div>
    <div class="col-md-12">
        <table id="tabelacurso" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Descrição</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <a href="/admin-disciplina/cadastrar/@item.Id" class="btn btn-dark btn-sm mt-2">Nova disciplina</a>
                            <a href="/admin-curso/atualizar/@item.Id" class="btn btn-primary btn-sm mt-2">Editar</a>
                            <a href="/admin-curso/excluir/@item.Id" class="btn btn-danger btn-sm mt-2">Excluir</a>
                            <a href="/admin-curso/obter/@item.Id" class="btn btn-info btn-sm mt-2">Detalhe</a>
                        </td>
                        <td>@item.Id</td>
                        <td>@item.Nome</td>
                        <td>@item.Descricao</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Ações</th>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Descrição</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#tabelacurso').DataTable();
        });
    </script>
}