@using Avd4.Aula.Domain.Entidades
@model List<Aluno>
@{
    ViewData["Title"] = "Lista de alunos";
}

<div class="row mt-3 mb-3">
    <div class="col-12">
        <fieldset>
            <legend>Lista de alunos</legend>
        </fieldset>
        <hr />
    </div>
    <div class="col-md-12">
        <table id="tabelaaluno" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>Nome</th>
                    <th>Matricula</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <a href="/admin-inscricao/cadastrar/@item.Id" class="btn btn-dark btn-sm mt-2">Inscrição</a>
                            <a href="/admin-aluno/atualizar/@item.Id" class="btn btn-primary btn-sm mt-2">Editar</a>
                            <a href="/admin-aluno/excluir/@item.Id" class="btn btn-danger btn-sm mt-2">Excluir</a>
                            <a href="/admin-aluno/obter/@item.Id" class="btn btn-info btn-sm mt-2">Detalhe</a>
                        </td>
                        <td>@item.Nome</td>
                        <td>@item.Matricula</td>
                        <td>@item.Email</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Ações</th>
                    <th>Nome</th>
                    <th>Matricula</th>
                    <th>Email</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#tabelaaluno').DataTable();
        });
    </script>
}