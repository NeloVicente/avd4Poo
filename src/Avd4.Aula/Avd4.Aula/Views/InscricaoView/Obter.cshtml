@using Avd4.Aula.Domain.Entidades
@model Inscricao
@{
    ViewData["Title"] = "Informações da inscrição";
}

<div class="row mt-3 mb-3">
    <div class="col-12">
        <fieldset>
            <legend>Informações da inscrição</legend>
        </fieldset>
        <hr />
    </div>
    <div class="col-md-12">

        <form>
            <div class="form-row">
                @Html.HiddenFor(x => x.Id, new { id = "Id" })
                @Html.HiddenFor(x => x.IdAluno, new { id = "IdAluno" })

                <div class="form-group col-md-4">
                    <label for="">Aluno</label>
                    @Html.TextBoxFor(x => x.Alunos.Nome, new { @class = "form-control", id = "Nome", @readonly = "readonly" })
                </div>

                <div class="form-group col-md-4">
                    <label for="">E-mail</label>
                    @Html.TextBoxFor(x => x.Alunos.Email, new { @class = "form-control", id = "Email", @readonly = "readonly" })
                </div>

                <div class="form-group col-md-4">
                    <label for="">Matricula</label>
                    @Html.TextBoxFor(x => x.Alunos.Matricula, new { @class = "form-control", id = "Matricula", @readonly = "readonly" })
                </div>

                <div class="form-group col-md-3">
                    <label for="">Status</label>
                    @Html.TextBoxFor(x => x.Status, new { @class = "form-control", id = "Status", @readonly = "readonly" })
                </div>
                <div class="form-group col-md-3">
                    <label for="">Selecione o curso</label>
                    <select data-val="@Model.IdCurso" class="form-control" id="IdCurso" readonly="readonly" disabled="disabled" name="IdCurso" asp-for="@Model.IdCurso">
                        <option value="">Selecione o curso</option>
                        @foreach (var item in (List<Curso>)ViewBag.Cursos)
                        {
                            <option value="@item.Id">@item.Nome</option>
                        }
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label for="">Data de início</label>
                    @Html.TextBoxFor(x => x.DataInicio, new { @class = "form-control", id = "DataInicio", @readonly = "readonly" })
                </div>
                <div class="form-group col-md-3">
                    <label for="">Data de conclusão</label>
                    @Html.TextBoxFor(x => x.DataConclusao, new { @class = "form-control", id = "DataConclusao", @readonly = "readonly" })
                </div>
                <div class="form-group col-md-12">
                    <h5>Disciplinas do curso</h5>
                    <table id="tabelainscricao" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Disciplina</th>
                                <th>Carga Horária</th>
                                <th>Descrição</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Cursos.Disciplinas)
                            {
                                <tr>
                                    <td>@item.Nome</td>
                                    <td>@item.CargaHoraria</td>
                                    <td>@item.Descricao</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <a href="/admin-inscricao/listar" class="btn btn-warning">Voltar</a>
        </form>
    </div>
</div>
