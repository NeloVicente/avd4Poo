@using Avd4.Aula.Domain.Entidades
@model Inscricao
@{
    ViewData["Title"] = "Cadastrar dados da inscrição";
}

<div class="row mt-3 mb-3">
    <div class="col-12">
        <fieldset>
            <legend>Cadastrar dados do inscrição</legend>
        </fieldset>
        <hr />
    </div>
    <div class="col-md-12">

        <form method="post" action="/admin-inscricao/cadastrar">
            <div class="form-row">
                @Html.HiddenFor(x => x.Id, new { id = "Id" })
                @Html.HiddenFor(x => x.IdAluno, new { id = "IdAluno" })

                <div class="form-group col-md-4">
                    <label for="">Status</label>
                    @Html.TextBoxFor(x => x.Status, new { @class = "form-control", id = "Status" })
                </div>
                <div class="form-group col-md-4">
                    <label for="">Data de início</label>
                    @Html.TextBoxFor(x => x.DataInicio, new { @class = "form-control", @type = "date", id = "DataInicio" })
                </div>
                <div class="form-group col-md-4">
                    <label for="">Data de conclusão</label>
                    @Html.TextBoxFor(x => x.DataConclusao, new { @class = "form-control", @type = "date", id = "DataConclusao" })
                </div>

                <div class="form-group col-md-12">
                    @if (TempData["sucesso"] != null)
                    {
                        <div class="alert alert-info" role="alert">
                            @TempData["sucesso"]
                        </div>
                    }
                </div>
            </div>
            <button type="submit" class="btn btn-success">Salvar</button>
            <a href="/admin-inscricao/listar" class="btn btn-warning">Voltar</a>
        </form>
    </div>
</div>

