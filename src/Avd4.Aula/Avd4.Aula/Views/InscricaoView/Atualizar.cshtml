@using Avd4.Aula.Domain.Entidades
@model Inscricao
@{
    ViewData["Title"] = "Atualizar dados da inscrição";
}

<div class="row mt-3 mb-3">
    <div class="col-12">
        <fieldset>
            <legend>Atualizar dados do inscrição</legend>
        </fieldset>
        <hr />
    </div>
    <div class="col-md-12">

        <form method="post" action="/admin-inscricao/atualizar">
            <div class="form-row">
                @Html.HiddenFor(x => x.Id, new { id = "Id" })
                @Html.HiddenFor(x => x.IdAluno, new { id = "IdAluno" })

                <div class="form-group col-md-4">
                    <label for="">Aluno</label>
                    @Html.TextBoxFor(x => x.Alunos.Nome, new { @class = "form-control", id = "Nome", @readonly = "readonly" })
                </div>

                <div class="form-group col-md-4">
                    <label for="">E-mail</label>
                    @Html.TextBoxFor(x => x.Alunos.Email, new { @class = "form-control", id = "Email", @readonly = "readonly" })
                </div>

                <div class="form-group col-md-4">
                    <label for="">Matricula</label>
                    @Html.TextBoxFor(x => x.Alunos.Matricula, new { @class = "form-control", id = "Matricula", @readonly = "readonly" })
                </div>

                <div class="form-group col-md-3">
                    <label for="">Status</label>
                    @Html.TextBoxFor(x => x.Status, new { @class = "form-control", id = "Status" })
                </div>
                <div class="form-group col-md-3">
                    <label for="">Selecione o curso</label>
                    <select data-val="@Model.IdCurso" class="form-control" id="IdCurso" name="IdCurso" asp-for="@Model.IdCurso">
                        <option value="">Selecione o curso</option>
                        @foreach (var item in (List<Curso>)ViewBag.Cursos)
                        {
                            <option value="@item.Id">@item.Nome</option>
                        }
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label for="">Data de início</label>
                    @Html.TextBoxFor(x => x.DataInicio, new { @class = "form-control", placeholder = "00/00/0000", id = "DataInicio" })
                </div>
                <div class="form-group col-md-3">
                    <label for="">Data de conclusão</label>
                    @Html.TextBoxFor(x => x.DataConclusao, new { @class = "form-control", placeholder = "00/00/0000", id = "DataConclusao" })
                </div>

                <div class="form-group col-md-12">
                    @if (TempData["sucesso"] != null)
                    {
                        <div class="alert alert-info" role="alert">
                            @TempData["sucesso"]
                        </div>
                    }
                </div>
            </div>
            <button type="submit" class="btn btn-success">Salvar</button>
            <a href="/admin-inscricao/listar" class="btn btn-warning">Voltar</a>
        </form>
    </div>
</div>

