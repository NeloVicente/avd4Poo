@using Avd4.Aula.Domain.Entidades
@model List<Disciplina>
@{
    ViewData["Title"] = "Lista de disciplinas";
}

<div class="row mt-3 mb-3">
    <div class="col-12">
        <fieldset>
            <legend>Lista de disciplinas</legend>
        </fieldset>
        <hr />
    </div>
    <div class="col-md-12">
        <table id="tabeladisciplina" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>Nome</th>
                    <th>Carga horaria</th>
                    <th>Descrição</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="text-center">
                        <a href="/admin-disciplina/atualizar/@item.Id" class="btn btn-primary btn-sm mt-2">Editar</a>
                        <a href="/admin-disciplina/excluir/@item.Id" class="btn btn-danger btn-sm mt-2">Excluir</a>
                        <a href="/admin-disciplina/obter/@item.Id" class="btn btn-info btn-sm mt-2">Detalhe</a>
                    </td>
                    <td>@item.Nome</td>
                    <td>@item.CargaHoraria</td>
                    <td>@item.Descricao</td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Ações</th>
                    <th>Nome</th>
                    <th>Carga horaria</th>
                    <th>Descrição</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#tabeladisciplina').DataTable();
        });
    </script>
}